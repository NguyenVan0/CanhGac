@model IEnumerable<CanhGac.Models.ViPham>

@{
    ViewData["Title"] = "Danh sách vi phạm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3 mb-4">DANH SÁCH VI PHẠM</h2>


<div class="card p-3 shadow-sm">

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="anticon anticon-plus-circle m-r-5"></i> Thêm vi phạm
        </a>
    </div>
    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-secondary">
            <tr>
                <th style="width: 20%;">Mã vi phạm</th>
                <th style="width: 50%;">Tên vi phạm</th>
                <th style="width: 30%;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="3">Không có bản ghi nào.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaViPham</td>
                        <td>@item.TenViPham</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.MaViPham" class="btn btn-success btn-sm mx-1">Chỉnh sửa</a>
                                <a asp-action="Details" asp-route-id="@item.MaViPham" class="btn btn-info btn-sm mx-1">Xem chi tiết</a>
                                <form asp-action="Delete" asp-route-id="@item.MaViPham" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-danger btn-sm mx-1"
                                            onclick="return confirm('Bạn có chắc chắn muốn xoá không?')">
                                        Xoá
                                    </button>
                                </form>
                            </div>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">«</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">»</a></li>
        </ul>
    </nav>
</div>

<style>
    .table th, .table td {
        vertical-align: middle !important;
    }

    .btn + .btn {
        margin-left: 5px;
    }

    .card {
        background-color: #fff;
        border-radius: 6px;
    }

    .table-secondary {
        background-color: #f2f2f2;
        font-weight: bold;
    }
</style>
