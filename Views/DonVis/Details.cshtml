@model CanhGac.Models.DonVi

@{
    ViewData["Title"] = "Chi tiết đơn vị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin chi tiết đơn vị</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-end">Tên đơn vị:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TenDonVi)</dd>

                <dt class="col-sm-3 text-end">Quân số:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.QuanSo)</dd>

                <dt class="col-sm-3 text-end">Màu sắc:</dt>
                <dd class="col-sm-9">
                    <span class="badge" style="background-color:@Model.MauSac; color: white;">
                        @Html.DisplayFor(model => model.MauSac)
                    </span>
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            <a asp-action="Edit" asp-route-id="@Model.MaDonVi" class="btn btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
