@model CanhGac.Models.HocVien

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết Học viên</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Học Viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenHocVien)
        </dd>
        <dt class="col-sm-2">
            Ngày Sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            Giới Tính
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class="col-sm-2">
            Gác
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gac)
        </dd>
        <dt class="col-sm-2">
            Số Lần Gác
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLanGac)
        </dd>
        <dt class="col-sm-2">
            Cấp Bậc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaCapBacNavigation.MaCapBac)
        </dd>
        <dt class="col-sm-2">
            Chức Vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaChucVuNavigation.MaChucVu)
        </dd>
        <dt class="col-sm-2">
            Mã Đại Đội
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaDaiDoiNavigation.MaDonVi)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-MaDaiDoi="@ViewBag.CurrentMaDaiDoi" asp-route-page="@ViewBag.CurrentPage" asp-route-MaID="@ViewBag.CurrentMaHV" asp-route-TenHV="@ViewBag.CurrentTenHV" asp-route-CapBac="@ViewBag.CurrentCapbac" asp-route-GioiTinh="@ViewBag.CurrentGioiTinh" asp-route-id="@Model.MaHocVien">Edit</a> |
    <a asp-action="HocVienTheoDaiDoi" asp-route-MaDaiDoi="@ViewBag.CurrentMaDaiDoi" asp-route-page="@ViewBag.CurrentPage" asp-route-MaID="@ViewBag.CurrentMaHV" asp-route-TenHV="@ViewBag.CurrentTenHV" asp-route-CapBac="@ViewBag.CurrentCapbac" asp-route-GioiTinh="@ViewBag.CurrentGioiTinh">Back to List</a>
</div>
