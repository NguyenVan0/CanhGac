@using Microsoft.AspNetCore.Identity
@{
    bool isTieuDoan = User.IsInRole("Tiểu đoàn");
}
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="~/Admin" class="brand-link text-center">
        <img src="~/adminassets/dist/img/AdminLTELogo.png" alt="Canh Gác Logo" class="brand-image img-circle elevation-3" style="opacity: .8; width: 40px;">
        <span class="brand-text font-weight-bold">Canh Gác</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar Menu -->
        <nav class="mt-3">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Trang chủ -->
                <li class="nav-item">
                    <a asp-controller="Admin" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-home"></i>
                        <p>Trang chủ</p>
                    </a>
                </li>

                <!-- Danh sách đại đội -->
                <li class="nav-item">
                    <a asp-controller="DonVis" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-users"></i>
                        <p>Danh sách đại đội</p>
                    </a>
                </li>

                <!-- Menu Đại đội (Component) -->
                @await Component.InvokeAsync("DaiDoiMenu")

                <!-- Lịch gác -->
                <li class="nav-item">
                    <a asp-controller="ThongTinGacs" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-calendar-alt"></i>
                        <p>Lịch gác</p>
                    </a>
                </li>

                <!-- Phân công học viên -->
                @if (!isTieuDoan)
                {
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "PhanCongHocVien", new { ngay = DateTime.Today.ToString("yyyy-MM-dd") })" class="nav-link">
                            <i class="nav-icon fas fa-user-check"></i>
                            <p>Phân công học viên</p>
                        </a>
                    </li>
                }

                <!-- Kiểm tra gác -->
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-shield-alt"></i>
                        <p>
                            Kiểm tra gác
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="KiemTraGac" asp-action="Index" class="nav-link">
                                <i class="far fa-dot-circle nav-icon"></i>
                                <p>Quản lý vi phạm</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="KiemTraGac" asp-action="LSGac" class="nav-link">
                                <i class="far fa-history nav-icon"></i>
                                <p>Lịch sử kiểm tra</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Quản lý hệ thống -->
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-cogs"></i>
                        <p>
                            Quản lý hệ thống
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Accounts1" asp-action="Index" class="nav-link">
                                <i class="fas fa-user-cog nav-icon"></i>
                                <p>Quản lý tài khoản</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Roles" asp-action="Index" class="nav-link">
                                <i class="fas fa-key nav-icon"></i>
                                <p>Quản lý quyền</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Accounts" asp-action="ChangePassword" class="nav-link">
                                <i class="fas fa-lock nav-icon"></i>
                                <p>Thay đổi mật khẩu</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Đăng xuất -->
                <li class="nav-item">
                    <a href="/dang-xuat.html" class="nav-link">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>Đăng xuất</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>